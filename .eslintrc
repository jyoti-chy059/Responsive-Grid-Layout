{
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended",
		"plugin:react-hooks/recommended"
	],
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"settings": {
		"react": {
			"pragma": "React", // Pragma to use, default to "React"
			"version": "16.13.0"
		}
	},
	"rules": {
		"react-hooks/exhaustive-deps": "error",
		"no-unused-vars": "warn"
	},
	"env": {
		"browser": true,
		"commonjs": true,
		"node": true,
		"es6": true,
		"jest": true,
		"mocha": true
	}
}
